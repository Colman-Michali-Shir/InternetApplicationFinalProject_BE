{
  "name": "finalprojectbe",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.ts",
  "scripts": {
    "prod": "cp .env.prod .env && tsc -p tsconfig_prod.json && pm2 restart ecosystem.config.js --env production",
    "dev": "cp .env.development.local .env && nodemon --exec ts-node src/app.ts",
    "test": "cp .env.test.local .env jest tsc && jest --detectOpenHandles --forceExit",
    "test:coverage": "cp .env.test.local .env tsc && jest --detectOpenHandles --forceExit --coverage",
    "testAuth": "cp .env.test.local .env jest --detectOpenHandles --forceExit auth.test.ts",
    "testPosts": "cp .env.test.local .env jest --detectOpenHandles --forceExit posts.test.ts",
    "testComments": "cp .env.test.local .env jest --detectOpenHandles --forceExit comments.test.ts",
    "testLikes": "cp .env.test.local .env jest --detectOpenHandles --forceExit likes.test.ts",
    "testRecommendation": "cp .env.test.local .env jest --detectOpenHandles --forceExit recommendation.test.ts",
    "testUsers": "cp .env.test.local .env jest --detectOpenHandles --forceExit users.test.ts",
    "testFiles": "cp .env.test.local .env jest --detectOpenHandles --forceExit files.test.ts",
    "start": "tsc && node dist/src/app.js",
    "lint": "eslint . --ext .ts",
    "devstart": "nodemon ./src/app.ts"
  },
  "author": "Michali and Shir",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "google-auth-library": "^9.15.1",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.87.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "9.0.7",
    "@types/multer": "^1.4.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.13.5",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^29.5.14",
    "@types/ms": "^2.1.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.19.1"
  }
}
